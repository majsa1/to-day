<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddEditActivity"
    tools:layout_editor_absoluteX="-12dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/add_edit_save_btn_id"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginEnd="48dp"
        android:text="@string/add_edit_save_btn_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918" />

    <Button
        android:id="@+id/add_edit_clear_btn_id"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:onClick="goTotaskListActivity"
        android:text="@string/add_edit_clear_btn_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_edit_save_btn_id"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918" />

    <EditText
        android:id="@+id/add_edit_title_pt"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="408dp"
        android:layout_height="76dp"
        android:layout_marginTop="112dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/add_edit_title_pt"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/add_edit_name_ti_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_name_ti_text"
        android:layout_width="393dp"
        android:layout_height="76dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:hint="@string/edit_name_ti_text"
        app:layout_constraintBottom_toTopOf="@+id/add_edit_deadline_dt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/add_edit_deadline_dt"
        android:layout_width="400dp"
        android:layout_height="76dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/add_edit_deadline_dt"
        android:importantForAutofill="no"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/add_edit_description_ti_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_edit_description_ti_text"
        android:layout_width="402dp"
        android:layout_height="76dp"
        android:layout_marginStart="4dp"
        android:drawableRight="@android:drawable/btn_dialog"

        android:gravity="center"

        android:hint="@string/add_edit_description_ti_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.667"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,ExtraText">

        <Spinner
            android:id="@+id/add_edit_label_sp_text"
            android:layout_width="408dp"
            android:layout_height="76dp"
            android:layout_marginBottom="17dp"
            android:autofillHints="@string/add_edit_label_sp_text"
            android:gravity="center"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBF9F9"
        android:minHeight="48dp"
        android:onClick="goTotaskListActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_edit_descriptin_et"
        android:layout_width="417dp"
        android:layout_height="84dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/add_edit_description_et"
        android:inputType="textPersonName"
        android:text="@string/add_edit_description_et"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_edit_deadline_dt" />

</androidx.constraintlayout.widget.ConstraintLayout>