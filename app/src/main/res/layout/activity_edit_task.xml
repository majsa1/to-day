<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_label_task_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTaskActivity">

    <Button
        android:id="@+id/edit_clear_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="60dp"
        android:text="@string/edit_clear_btn_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/edit_save_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="60dp"
        android:text="@string/edit_save_btn_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edit_clear_btn_id" />

    <TextView
        android:id="@+id/edit_title_edit_task_text"
        android:layout_width="113dp"
        android:layout_height="43dp"
        android:layout_marginBottom="60dp"
        android:text="@string/edit_title_edit_task_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_name_task_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:hint="@string/edit_label_task_text"
        app:layout_constraintBottom_toTopOf="@+id/edit_description_task_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_deadline_task_text"
        android:layout_width="411dp"
        android:layout_height="41dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="@string/edit_deadline_task_text"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/textInputEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@tools:sample/date/hhmmss" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_description_task_text"
        android:layout_width="408dp"
        android:layout_height="89dp"
        android:layout_marginBottom="148dp"
        android:hint="@string/edit_description_task_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateIds" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_name_task_text"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:hint="@string/edit_name_task_text"
        app:layout_constraintBottom_toTopOf="@+id/edit_deadline_task_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>