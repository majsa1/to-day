<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">

    <TextView
        android:id="@+id/view_name_task_tv"
        android:layout_width="372dp"
        android:layout_height="88dp"
        android:layout_marginTop="96dp"
        android:hint="@string/view_name_task_tv"
        android:textColorHint="#8D6E63"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_deadline_tv"
        android:layout_width="372dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:hint="@string/view_deadline_tv"
        android:textColorHint="#8D6E63"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_name_task_tv" />

    <TextView
        android:id="@+id/view_description_tv"
        android:layout_width="372dp"
        android:layout_height="88dp"
        android:layout_marginBottom="128dp"
        android:hint="@string/view_description_tv"
        android:textColorHint="#8D6E63"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/view_back_btn_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/back"
        android:minHeight="48dp"
        android:onClick="goTotaskListActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/view_label_tv"
        android:layout_width="372dp"
        android:layout_height="88dp"
        android:layout_marginTop="104dp"
        android:hint="@string/add_edit_label_sp_text"
        android:textColorHint="#8D6E63"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_deadline_tv" />

    <TextView
        android:id="@+id/view_completed_tv"
        android:layout_width="372dp"
        android:layout_height="88dp"
        android:layout_marginTop="296dp"
        android:hint="@string/view_completed_tv"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/view_label_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163" />

    <Button
        android:id="@+id/view_edit_btn_id"
        android:layout_width="217dp"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:text="@string/view_edit_btn_id"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>